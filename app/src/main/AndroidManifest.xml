<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adifaisalr.newsapitest">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.adifaisalr.newsapitest.application.NewsApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.adifaisalr.newsapitest.activity.MainActivity"
            android:label="@string/news_source">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.ArticleActivity"
            android:label="@string/article_list"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".activity.ArticleDetailActivity"
            android:label="@string/article_list"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>